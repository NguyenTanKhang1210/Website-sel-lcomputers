@model IEnumerable<MyClass.Models.PostInfo>
@{
    ViewBag.Title = "Tất cả bài viết";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using BanPC.Library
<section class="maincontent clearfix">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="category-title position-relative my-3">
                    <h2 class="title-post text-center">Tất cả bài viết</h2>
                </div>
                @foreach (var post in Model)
                {
                    <div class="row my-3">
                        <div class="col-md-3">
                            <div class="content">
                                <div class="image group">
                                    <div class="grid images_3_of_1">
                                        <a href="~/@post.Slug">
                                            <img src="~/Public/images/posts/@post.Img" alt="" style="max-width:300px;" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="content">
                                <div class="image group">
                                    <div class="grid news_desc">
                                        <h3> <a href="~/@post.Slug">@post.Title</a></h3>
                                        <p>@XString.Str_Limit(post.Detail, 1000)</p>
                                        <div class="text-right">
                                            <a href="~/@post.Slug">Xem thêm</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>
