@model MyClass.Models.Menu

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-3">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Chi tiết Menu</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <a href="@Url.Action("Edit","Menu" , new { id = Model.Id })" class="btn btn-sm btn-success"><i class="fas fa-edit"></i> Cập nhật</a>
                        <a href="@Url.Action("Index","Menu")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i> Về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body ">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px;">Tên trường</th>
                        <th>Nội dung</th>
                    </tr>
                    <tr>
                        <td>
                            Tên menu
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                           Liên kết
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Link)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Bảng ID
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.TableId)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Kiểu menu
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.TypeMenu)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Vị trí
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Position)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Kiểu
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ParentId)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Sắp xếp
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Orders)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Người tạo
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CreatedBy)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ngày tạo
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CreatedAt)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Người cập nhật
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.UpdatedBy)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ngày cập nhật
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.UpdatedAt)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Trạng thái
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Status)
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>


