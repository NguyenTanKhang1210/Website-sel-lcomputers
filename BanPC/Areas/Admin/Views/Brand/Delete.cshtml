@model MyClass.Models.Brand

@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-3">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-6">
                            <strong>Xác nhận xóa danh mục sản phẩm</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <a href="@Url.Action("Edit","Brand" , new { id = Model.Id })" class="btn btn-sm btn-success"><i class="fas fa-edit"></i> Cập nhật</a>
                            <a href="@Url.Action("Index","Brand")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i> Về danh sách</a>
                            <button class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>

                        </div>
                    </div>
                 }
                </div>
                <div class="card-body ">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width:120px">Tên trường</th>
                            <th>Noi Dung</th>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Name)</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.Slug)</td>
                            <td> @Html.DisplayFor(modelItem => Model.Slug)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.Img)</td>
                            <td> @Html.DisplayFor(modelItem => Model.Img)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.Address)</td>
                            <td> @Html.DisplayFor(modelItem => Model.Address)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.Phone)</td>
                            <td> @Html.DisplayFor(modelItem => Model.Phone)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.Email)</td>
                            <td> @Html.DisplayFor(modelItem => Model.Email)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.Orders)</td>
                            <td> @Html.DisplayFor(modelItem => Model.Orders)</td>
                        </tr>

                        <tr>
                            <td>@Html.DisplayNameFor(model => model.CreatedBy)</td>
                            <td> @Html.DisplayFor(modelItem => Model.CreatedBy)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.CreatedAt)</td>
                            <td> @Html.DisplayFor(modelItem => Model.CreatedAt)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.UpdatedBy)</td>
                            <td> @Html.DisplayFor(modelItem => Model.UpdatedBy)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.UpdatedAt)</td>
                            <td> @Html.DisplayFor(modelItem => Model.UpdatedAt)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.Status)</td>
                            <td> @Html.DisplayFor(modelItem => Model.Status)</td>
                        </tr>
                    </table>                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>


